{% extends "../layout.njk" %}


{% block content %}
 
   <div  style="margin-top: 50px; text-align: center;" >
      <h1 style="font-size: 30px; font-weight: bold;">Receitas da Semana</h1>
    </div>

<section class="cards" style="margin-top: 50px;">

{% for item in items %}
<div class="card" id="{{item.id}}">
<div class="card__image-container {{'featured-wrapper if item.featured'}}">
<img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="Imagem de {{item.title}}">
{%if item.featured %}  
 <div class="featured">Destaque</div>
{% endif %}
</div>
<div class="card__content">
<p>{{item.title}}</p>
</div>
<div class="card__info">
<p>{{item.duration}}</p>
<p class="card__price">{{item.price}}</p>
</div>
</div>
{% endfor %}}
</section>


<script src="/scriptVideos.js">

</script>
{% endblock %}